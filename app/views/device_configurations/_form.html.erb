<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <h4 class="mb"><i class="fa fa-angle-right"></i> Configuração do Dispositivo</h4>

      <%= form_for [@device, @device_configuration], html: { class: 'form-horizontal style-form' } do |f| %>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label"><%= f.label :name %></label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label"><%= f.label :description %></label>
          <div class="col-sm-10">
            <%= f.text_area :description, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label"><%= f.label :content %></label>
          <div class="col-sm-10">
            <%= f.text_area :content, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10">
            <%= f.submit class: 'btn btn-theme02' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
